#!/usr/bin/env ruby

require 'shellwords'

file = File.expand_path(ARGV[0] || (STDERR.puts('you must specify a ruby file'); exit(-1)))
file = Shellwords.escape(file)

dir = File.dirname(file)
dir = Shellwords.escape(dir)

if File.exist?(ENV['HOME'] + '/.rvmrc')
  exec( """
        source \"$HOME/.rvm/scripts/rvm\"
        echo \"     file: #{file}\"
        echo \"directory: #{dir}\"
        echo \"  command: bundle exec rspec #{ARGV.join(' ')} --color\"
        echo \"-------------------------------------------------------------\"
        bundle exec rspec #{ARGV.join(' ')} --color
        """ )
elsif File.exist?(ENV['HOME'] + '/.rbenv')
  exec( """
        echo \"     file: #{file}\"
        echo \"directory: #{dir}\"
        echo \"  command: /usr/local/bin/rbenv exec bundle exec rspec #{ARGV.join(' ')} --color\"
        echo \"-------------------------------------------------------------\"
        /usr/local/bin/rbenv exec rspec #{ARGV.join(' ')} --color
        """ )
else
  STDERR.puts("'.rvm' or '.rbenv' directories not found in your home path")
  exit(-1)
end

puts "Could not find any .rvmrc or .rbenv above #{file}"

exec( """
      echo \"command: bundle exec rspec #{file}\"
      bundle exec rspec #{file} --color
      """ )

exit(-1)